/* SETTINGS */
:root {
  --main-page-bg-color: #<%= @base["00"]["hex"] %>;
  --main-search-bg-color: #<%= @base["01"]["hex"] %>;
  --main-search-fg-color: #<%= @base["06"]["hex"] %>;
  --main-fav-bg-color: #<%= @base["04"]["hex"] %>;
  --main-page-cell-bg-color: <%= @base["01"]["hex"] %>;

  --main-page-text-color: #<%= @base["07"]["hex"] %>;
  --main-page-text-color-two: #<%= @base["04"]["hex"] %>;
  --main-page-text-invert-color-two: #<%= @base["07"]["hex"] %>;
  --main-page-link-color: #<%= @base["07"]["hex"] %>;

  --main-border-radius: 0px;
  --main-theme-border-color: <%= @base["0D"]["hex"] %>;
  --main-page-border-color: <%= @base["0D"]["hex"] %>;

  --main-font-family: "Inconsolata";
}
 
/* :::::: NEW TAB :::::: */
@-moz-document url("about:newtab"){
  
  /* BG */
  #newtab-scrollbox {
    background: url("") top center /cover, var(--main-page-bg-color) !important;
    background-color: var(--main-page-bg-color) !important;
  }

  /* SEARCH */
  #newtab-search-container {
    height: 21px;
    padding-top: 0px !important;
    padding-bottom: 0px !important;
  }
  #newtab-search-form {
    padding-top: 0px !important;
    padding-bottom: 0px !important;
    background: var(--main-search-bg-color) !important;
    color: var(--main-search-fg-color) !important;
  }

  #newtab-search-logo {
    display: none;
  }
  
  #newtab-search-text {
    padding: 1px 0px 0px 0px !important;
    min-height: 21px;
    -moz-appearance: none !important;
    background: transparent !important;
    border: 0px solid var(--main-page-border-color)!important;
    border-radius: 0px !important;
    outline: 0 none !important;
    box-shadow: none !important;
    font-size: 10 !important;
    color: var(--main-page-text-color-two) !important;
    font-family: var(--main-font-family) !important;
    transition-property: border;
    transition-duration: 150ms;
  }
    
  #newtab-search-text:focus,
  #newtab-search-text[autofocus] {
    border: 0px solid var(--main-page-border-color)!important;
    color: 0px solid var(--main-search-fg-color)!important;
    border-radius: 0px !important;
    transition-property: border;
    transition-duration: 150ms;
  }
    
  #newtab-search-submit {
    padding: 0px 0px 0px 0px !important;
    height: 21px;
    -moz-appearance: none !important;
    background: transparent !important;
    border: 0px solid var(--main-page-border-color)!important;
    border-left: 0px solid transparent!important;
    border-radius: 0px !important;
    box-shadow: none !important;
    font-family: var(--main-font-family) !important;
    font-size: 10 !important;
    text-transform: uppercase;
    color: var(--main-page-text-color) !important;
  }
    
  #newtab-search-text:focus + #newtab-search-submit,
  #newtab-search-text[autofocus] + #newtab-search-submit{
    background: transparent !important;
    border: 0px solid var(--main-page-border-color)!important;
    border-radius: 0px !important;
    box-shadow: none !important;
    color: var(--main-page-text-color-two) !important;
  }
    
  #newtab-search-text + #newtab-search-submit:hover {
    background: var(--main-page-text-color-two) !important;
    border: 0px solid var(--main-page-border-color)!important;
    color: var(--main-page-text-invert-color-two) !important;
  }
    
  #newtab-search-text +#newtab-search-submit:hover:active {
    background: var(--main-page-text-invert-color-two) !important;
    border: 0px solid var(--main-page-border-color)!important;
    color: var(--main-page-text-color-two) !important;
  }
  
  /* SITES */
  .newtab-site {
    box-shadow: none !important;
    border: none !important;
    color: var(--main-page-text-color-two) !important; 
    margin: 0px;
    border-radius: 0px;
  }

  .newtab-cell:not([ignorehover]) > .newtab-site:hover,
  .newtab-site[dragged] {
    border: none;
    box-shadow: none ;
    margin: 0px;
  }

  /* TITLES */
  .newtab-sponsored,
  .newtab-title,
  .newtab-suggested {
    /*text-align: left;*/
    background-color: var(--main-page-bg-color) !important;
    border: opx solid var(--main-page-border-color)!important;
  }
 
  .newtab-sponsored,.newtab-title {
    font-size: 10 !important;
    font-family: var(--main-font-family) !important;
    color:var(--main-page-text-color) !important; 
    transition-property: color;
    transition-duration: 150ms;
  }

  .newtab-sponsored{
    color:var(--main-page-text-color-two) !important; 
  }

  .newtab-site:hover .newtab-title {
    background-color: var(--main-fav-bg-color) !important;
  }

  /* THUMBNAILS */
  .newtab-thumbnail {
    border-radius: 0px !important;
    filter: grayscale(1) opacity(.2); 
    border: 0px solid var(--main-theme-border-color)!important;
  }
  
  .newtab-site:hover .newtab-thumbnail {
    border-radius: 0px;
    filter: grayscale(0) opacity(0.7);
    /*transition: opacity 100ms ease-out;
    background-color: var(--main-page-bg-color) !important;
    background-blend-mode: overlay !important;
    transition-property: filter;
    transition-duration: 50ms; */
  }

  #newtab-grid {
	max-height: 400px !important;
	max-width: 700px !important;
  }

  /* CELLS */
  .newtab-cell {
    width: 150px !important;
    height: 150px !important;
    background-color: var(--main-page-cell-bg-color);
    border-radius: 0px;
  }

  .newtab-cell:hover {
    background-color: var(--main-page-cell-bg-color);
    border-radius: 0px;
  }

  .newtab-cell:empty {
    outline: 1px dashed var(--main-theme-border-color) ;
    -moz-outline-radius: 0px;
  }

  /* CELLS */
  .newtab-cell,
  .newtab-intro-cell,
  .newtab-intro-cell-hover {
    background-color: var(--main-theme-bg-color) ;
    border-radius: 0px;
    border: 0px;
  }

  .newtab-cell:empty {
    outline: none;
    -moz-outline-radius: 0px;
    border: 0px solid white;
    border-radius: 0px;
  }

  /* SITES */
  .newtab-site {
    border: 0px solid white;
    border-radius: 0px;
    box-shadow: none;
    text-decoration: none;
    transition-property: top, left, opacity, box-shadow, background-color;
  }

  .newtab-cell:not([ignorehover]) .newtab-control:hover ~ .newtab-link,
  .newtab-cell:not([ignorehover]) .newtab-link:hover,
  .newtab-site[dragged],
  .newtab-intro-cell-hover .newtab-link {
    border: 0px solid white;
    border-radius: 0px;
    box-shadow: none;
    margin: 0px;
  }
  .newtab-cell ,.newtab-control ,.newtab-link,
  .newtab-cell ,.newtab-link,
  .newtab-intro-cell-hover, .newtab-link {
    border: 0px solid white;
    border-radius: 0px;
    box-shadow: none;

  }
  
  /* CONTROLS */
  .newtab-control-block {
    opacity: 0;
    transition-property: opacity;
    transition-duration: 0ms;
  }

  .newtab-control-pin,
  .newtab-site[pinned] .newtab-control-pin:hover:active {
    opacity: 0;
    transition-property: opacity;
    transition-duration: 0ms;
  }

  /* UNDO */
  #newtab-undo-container {
    background: var(--main-page-text-color-two) !important;
    border-radius: 0px;
    border-color: transparent;
  }

  /* CUSTOMIZE */
  #newtab-intro-what {
    margin-top: -4px;
    font-size: 10 !important;
    font-family: var(--main-font-family) !important;
    color: var(--main-page-link-color);
    text-decoration: none; 
    /*transition-property: color;
    transition-duration: 150ms;*/
  }
  
  #newtab-intro-what:hover {
    color: var(--main-page-link-color);
  }

  #newtab-customize-button,
  .newtab-customize {
	display: none;
	height: 21px;
	width: 21px;
  }

}

